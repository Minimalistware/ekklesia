@model ExpenditureEditViewModel

@{
    ViewBag.Title = Model.PageTitle;
}


<div class="card">
    <div class="card-header">
        Editar Despesa
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-controller="transaction" asp-action="EditExpenditure" method="post" class="mt-3">

            <input hidden asp-for="Id" />

            <div class="form-group row">
                <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
                <div class="col-sm-10">
                    <input asp-for="Date" class="form-control" placeholder="Data">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Value" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Value" class="form-control" placeholder="0,00">
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Description" class="form-control" placeholder="Ex.: Materias, Produtos etc...">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                </div>
            </div>


        </form>

    </div>
</div>
