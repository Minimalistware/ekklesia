@model ExpenditureCreateViewModel


<form enctype="multipart/form-data" asp-controller="transaction" asp-action="CreateExpenditure" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Value" class="col-sm-2 col-form-label"></label>
        <div class="input-group col-sm-10">
            <input asp-for="Value" class="form-control" placeholder="Valor">
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Descrição">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OccasionId" class="col-sm-2 col-form-label">Evento</label>
        <div class="col-sm-10">
            <select asp-for="OccasionId" class="custom-select mr-sm-2"
                    asp-items="@Model.AllEvents">
                <option value="0">Selecione um membro</option>
            </select>
            <span asp-validation-for="OccasionId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Invoice" class="col-sm-2 col-form-label">Comprovante</label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Invoice" class="form-control custom-file-input">
                <label class="custom-file-label">Clique aqui para selecionar uma nota fiscal...</label>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-controller="transaction" asp-action="list" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });

    </script>
}
