@model ExpenditureCreateViewModel


<form enctype="multipart/form-data" asp-controller="transaction" asp-action="CreateExpenditure" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Value" class="col-sm-2 col-form-label"></label>
        <div class="input-group col-sm-10">
            <input asp-for="Value" class="form-control" placeholder="Valor">
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>

        
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Categoria">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-controller="transaction" asp-action="list" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>

</form>