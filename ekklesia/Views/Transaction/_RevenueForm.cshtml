@model RevenueCreateViewModel

<form enctype="multipart/form-data" asp-controller="transaction" asp-action="CreateRevenue" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Value" class="col-sm-2 col-form-label">Valor</label>
        <div class="input-group col-sm-10">
            <input asp-for="Value" class="form-control">
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="RevenueType" class="col-sm-2 col-form-label">Tipo da receita</label>
        <div class="col-sm-10">
            <select asp-for="RevenueType" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<RevenueType>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="RevenueType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="OccasionId" class="col-sm-2 col-form-label">Evento</label>
        <div class="col-sm-10">
            <select asp-for="OccasionId" class="custom-select mr-sm-2"
                    asp-items="@Model.AllEvents">
                <option value="0">Selecione um evento</option>
            </select>
            <span asp-validation-for="OccasionId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-controller="transaction" asp-action="list" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>

</form>