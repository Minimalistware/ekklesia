@model TransactionSearchViewModel


@{
    ViewBag.Title = "Buscar transação";
}

    <div class="card">
        <div class="card-header">
            <div class="col-md-8">
                <h4>@ViewBag.Title</h4>
            </div>
        </div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-controller="transaction" asp-action="Search" method="post" class="mt-3">

                <div class="form-group row">
                    <label asp-for="Type" class="col-sm-2 col-form-label">Tipo</label>
                    <div class="col-sm-10">
                        <select asp-for="Type" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<TransactionType>()">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Category" class="form-control" placeholder="Categoria">
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-sm-10">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                        <a asp-controller="transaction" asp-action="list" class="btn btn-secondary">Cancelar</a>
                    </div>
                </div>


            </form>
        </div>
    </div>

