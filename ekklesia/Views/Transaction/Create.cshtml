@model TransactionCreateViewModel


@{
    ViewBag.Title = "Criar transação";
}


<form enctype="multipart/form-data" asp-controller="transaction" asp-action="create" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Value" class="col-sm-2 col-form-label"></label>
        <div class="input-group col-sm-10">
            <input asp-for="Value" class="form-control" placeholder="Valor">
            <span asp-validation-for="Value" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Type" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Type" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<TransactionType>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Category" class="form-control" placeholder="Categoria">
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
    </div>




    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-controller="transaction" asp-action="list" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>

</form>