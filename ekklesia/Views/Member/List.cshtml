@model PaginatedList<Member>

@{
    ViewBag.Title = "Ekklésia";
}

@{
    var prevDisabled = Model.PreviousPage ? "" : "disabled";
    var nextDisabled = Model.NextPage ? "" : "disabled";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-8">
                <h4>Membros</h4>
            </div>
            <div class="btn-group col-md-4 text-right">
                <a asp-controller="member" asp-action="create"
                   class="btn btn-primary btn-create">
                    <i class="glyphicon glyphicon-user"></i>
                    <span>Criar</span>
                </a>
                <a asp-controller="member" asp-action="search" class="btn btn-secondary">
                    <i class="glyphicon glyphicon-search"></i>
                    <span>Buscar</span>
                </a>
            </div>

        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Cargo</th>

                </tr>
            </thead>

            <tbody>
                @foreach (var member in Model)
                {
                    <tr>
                        <td>@member.Name</td>
                        <td>@member.Phone</td>
                        <td>@member.Position</td>
                        <td>

                            <div class="btn-group">
                                <a asp-controller="member" asp-action="edit" asp-route-id="@member.Id"
                                   class="btn btn-primary">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editar
                                </a>
                                <a asp-controller="member" asp-action="details" asp-route-id="@member.Id"
                                   class="btn btn-secondary">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Detalhes
                                </a>

                            </div>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
    <div class="card-footer p-0">
        <nav aria-label="...">
            <ul class="pagination justify-content-end mt-3 mr-3">

                <li class="page-item @prevDisabled">
                    <a class="page-link " asp-action="List" asp-controller="Member"
                       asp-route-pageNumber="@(Model.PageIndex - 1)">
                        Anterior
                    </a>
                </li>

                <li class="page-item @nextDisabled">
                    <a class="page-link" asp-action="List" asp-controller="Member"
                       asp-route-pageNumber="@(Model.PageIndex + 1)">
                        Próximo
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>
