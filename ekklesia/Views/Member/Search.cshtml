@model MemberSreachViewModel

@{
ViewBag.Title = "Buscar Membro";
}

<div class="card">
<div class="card-header">
    <div class="col-md-8">
        <h4>@ViewBag.Title</h4>
    </div>
</div>
<div class="card-body">
    <form enctype="multipart/form-data" asp-controller="member" asp-action="Search" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Nome</label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Nome">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="Position" class="col-sm-2 col-form-label">Cargo</label>
            <div class="col-sm-10">
                <select asp-for="Position" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Position>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Buscar</button>
                <a asp-controller="member" asp-action="list" class="btn btn-primary">Cancelar</a>
            </div>
        </div>


    </form>
</div>
</div>



