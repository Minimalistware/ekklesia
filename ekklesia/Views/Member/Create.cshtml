@model MemberCreateViewModel


@{
    ViewBag.Title = "Create";
}


<form enctype="multipart/form-data" asp-controller="member" asp-action="create" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Telefone">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="Position" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Position" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Position>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>
    </div>

    
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Criar</button>
        </div>
    </div>
   

</form>