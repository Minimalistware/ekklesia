@model ReportSearchViewModel

@{
    ViewBag.Title = "Buscar Relatório";
}

<div class="card">
    <div class="card-header">
        <div class="col-md-8">
            <h4>@ViewBag.Title</h4>
        </div>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-controller="Report" asp-action="Search" method="post" class="mt-3">

            <div class="form-group row">
                <label asp-for="ReportType" class="col-sm-2 col-form-label">Tipo</label>
                <div class="col-sm-10">
                    <select asp-for="ReportType" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<ReportType>()">
                        <option value="">Please Select</option>
                    </select>                    
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Months" class="col-sm-2 col-form-label">Meses atrás</label>
                <div class="col-sm-10">
                    <input asp-for="Months" min="1" class="form-control">
                    
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                    <a asp-controller="member" asp-action="list" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>


        </form>
    </div>
</div>



