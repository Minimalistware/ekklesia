@model IEnumerable<Report>;

@{
    ViewBag.Title = "Relatórios";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-8">
                <h4>Relatórios</h4>
            </div>
            <div class="btn-group col-md-4 text-right">
                <a sp-controller="report" asp-action="create" class="btn btn-primary">
                    <i class="glyphicon glyphicon-user"></i>
                    <span>Criar</span>
                </a>

                <a asp-controller="report" asp-action="search" class="btn btn-secondary">
                    <i class="glyphicon glyphicon-search"></i>
                    <span>Buscar</span>
                </a>
            </div>

        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Data</th>
                    <th>Tipo</th>
                    <th>Pastor</th>
                    <th>Receitas</th>
                    <th>Despesa</th>
                    <th>Saldo</th>
                </tr>
            </thead>

            <tbody>
                @{var culture = new System.Globalization.CultureInfo("pt-BR"); }
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.Date.ToString("d", culture)</td>
                        <td>@report.ReportType</td>
                        <td>@report.Preacher.Name</td>
                        <td>@report.Income</td>
                        <td>@report.Expense</td>
                        <td>@report.Balance</td>
                        <td>
                            <div class="btn-group">

                                <a asp-controller="report" asp-action="Details" asp-route-id="@report.Id"
                                   class="btn btn-secondary">
                                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Detalhes
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer p-0">
        <nav aria-label="...">
            <ul class="pagination justify-content-end mt-3 mr-3">
                <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active">
                    <span class="page-link">
                        2<span class="sr-only">(current)</span>
                    </span>
                </li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>
