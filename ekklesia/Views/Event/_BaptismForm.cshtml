@model BaptismCreateViewModel

<form enctype="multipart/form-data" asp-controller="event" asp-action="CreateBaptism" method="post" class="mt-3">
     
    
    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label">Data</label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Place" class="col-sm-2 col-form-label">Lugar</label>
        <div class="col-sm-10">
            <input asp-for="Place" class="form-control" placeholder="Ex.: Praia do atalaia.">
            <span asp-validation-for="Place" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="TeacherId" class="col-sm-2 col-form-label">Batizador</label>
        <div class="col-sm-10">
            <select asp-for="TeacherId" class="custom-select mr-sm-2"
                    asp-items="@Model.AllMembers">
                <option value="0">Selecione um membro</option>
            </select>
            <span asp-validation-for="TeacherId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">

        <label asp-for="SelectedMembers" class="col-sm-2 col-form-label">Membros batizados</label>
        <div class="col-sm-10">

            <select asp-for="SelectedMembers" class="custom-select mr-sm-2"
                    asp-items="@Model.AllMembers">
                <option value="0">Selecione os membros</option>
            </select>
            <span asp-validation-for="SelectedMembers" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </div>

</form>