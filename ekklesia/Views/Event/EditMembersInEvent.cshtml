@model List<MemberEventViewModel>

@{
    var eventId = ViewBag.EventId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h3>Adicione ou remova membros deste evento.</h3>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model[i].MemberId" />
                <input type="hidden" asp-for="@Model[i].MemberName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].MemberName
                </label>
            </div>
            }                        
        </div>
        <div class="card-footer">
            <input disabled type="submit" value="Atualizar" class="btn btn-primary" style="width:auto" />
            <a asp-action="Edit" asp-controller="event" asp-route-Id="@eventId"
               class="btn btn-secondary" style="width:auto">Cancelar</a>
        </div>
    </div>
</form>