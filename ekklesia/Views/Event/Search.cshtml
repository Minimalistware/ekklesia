@model EventSearchViewModel

@{
    ViewBag.Title = "Buscar Evento";
}

<div class="card">
    <div class="card-header">
        <div class="col-md-8">
            <h4>@ViewBag.Title</h4>
        </div>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-controller="event" asp-action="Search" method="post" class="mt-3">

            <div class="form-group row">
                <label asp-for="EventType" class="col-sm-2 col-form-label">Tipo</label>
                <div class="col-sm-10">
                    <select asp-for="EventType" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<EventType>()">
                        <option value="">Please Select</option>
                    </select>
                    <span asp-validation-for="EventType" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Days" class="col-sm-2 col-form-label">Dias antes</label>
                <div class="input-group col-sm-10">
                    <input asp-for="Days" min="1" class="form-control">
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                    <a asp-controller="event" asp-action="list" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>


        </form>
    </div>
</div>





