@model CreateCultViewModel

    <form enctype="multipart/form-data" asp-controller="event" asp-action="CreateCult" method="post" class="mt-3">

        <div class="form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Date" class="form-control" placeholder="Data">
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="MainVerse" class="col-sm-2 col-form-label">Versículo</label>
            <div class="col-sm-10">
                <input asp-for="MainVerse" class="form-control" placeholder="Versículo">
                <span asp-validation-for="MainVerse" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfPeople" class="col-sm-2 col-form-label">Número de pessoas</label>
            <div class="col-sm-10">
                <input asp-for="NumberOfPeople" class="form-control" placeholder="Número de pessoas">
                <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Type" class="col-sm-2 col-form-label">Cargo</label>
            <div class="col-sm-10">
                <select asp-for="Type" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<CultType>()">
                    <option value="0">Please Select</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>