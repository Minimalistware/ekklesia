@model CreateCultViewModel

<form enctype="multipart/form-data" asp-controller="event" asp-action="CreateCult" method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="Date" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Date" class="form-control" placeholder="Data">
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="MainVerse" class="col-sm-2 col-form-label">Versículo</label>
        <div class="col-sm-10">
            <input asp-for="MainVerse" class="form-control" placeholder="Versículo">
            <span asp-validation-for="MainVerse" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="NumberOfPeople" class="col-sm-2 col-form-label">Número de pessoas</label>
        <div class="col-sm-10">
            <input asp-for="NumberOfPeople" class="form-control" placeholder="Número de pessoas">
            <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Convertions" class="col-sm-2 col-form-label">N° de que aceitaram a Jesus: </label>
        <div class="col-sm-10">
            <input asp-for="Convertions" class="form-control" placeholder="Número">
            <span asp-validation-for="Convertions" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CultType" class="col-sm-2 col-form-label">Tipo</label>
        <div class="col-sm-10">
            <select asp-for="CultType" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<CultType>()">
                <option value="0">Please Select</option>
            </select>
            <span asp-validation-for="CultType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="InDoors" class="col-sm-2 col-form-label">Culto realizado</label>
        <div class="custom-control custom-radio custom-control-inline">
            <input asp-for="InDoors" class="custom-control-input">
            <label class="custom-control-label" asp-for="InDoors">Internamente</label>
        </div>
        <span asp-validation-for="InDoors" class="text-danger"></span>
    </div>


    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Criar</button>
            <a asp-controller="event" asp-action="list" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>