@model CellEditViewModel

@{
    ViewBag.Title = Model.PageTitle;
}

<div class="card">
    <h5 class="card-header">@ViewBag.Title</h5>
    <div class="card-body">
        <form enctype="multipart/form-data" asp-controller="event" asp-action="EditCell" method="post" class="mt-3">
            <input hidden asp-for="Id" />

            <div class="form-group row">
                <label asp-for="Date" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Date" class="form-control" placeholder="Data">
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <label asp-for="Convertions" class="col-sm-2 col-form-label">Converções</label>
                <div class="col-sm-10">
                    <input asp-for="Convertions" min="1" class="form-control"
                           placeholder="N° de pessoas que aceitaram a Jesus">
                    <span asp-validation-for="Convertions" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Savlar</button>
                    <a asp-controller="event" asp-action="list" class="btn btn-secondary">Cancelar</a>
                </div>
            </div>


        </form>


    </div>
</div>
